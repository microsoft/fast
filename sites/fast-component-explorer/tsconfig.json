{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ES6",
        "target": "ES6",
        "baseUrl": "./",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ]
}
