{
  "$schema": "http://json-schema.org/schema#",
  "$id": "fast-menu-item",
  "id": "fast-menu-item",
  "title": "Menu item",
  "description": "The FAST menu item element",
  "type": "object",
  "version": 1.1,
  "mapsToTagName": "fast-menu-item",
  "properties": {
    "disabled": {
      "default": true,
      "title": "Disabled",
      "description": "Sets the disabled state of the item",
      "mapsToAttribute": "disabled",
      "type": "boolean"
    },
    "expanded": {
      "default": true,
      "title": "Expanded",
      "description": "The expanded state of the item",
      "mapsToAttribute": "expanded",
      "type": "boolean"
    },
    "role": {
      "enum": [
        "menuitem",
        "menuitemcheckbox",
        "menuitemradio"
      ],
      "default": "menuitem",
      "title": "Role",
      "description": "The ARIA role of the menu item",
      "mapsToAttribute": "role",
      "type": "string"
    },
    "checked": {
      "default": true,
      "title": "Checked",
      "description": "The checked state for elements with a role of menuitemradio or menuitemcheckbox",
      "mapsToAttribute": "checked",
      "type": "boolean"
    },
