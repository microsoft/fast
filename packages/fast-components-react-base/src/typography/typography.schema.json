{
    "$schema": "http://json-schema.org/schema#",
    "title": "Typography",
    "description": "A typography component's schema definition.",
    "type": "object",
    "id": "typography",
    "children": true,
    "properties": {
        "tag": {
            "title": "HTML element tag",
            "type": "string",
            "enum": [
                "caption",
                "h1",
                "h2",
                "h3",
                "h4",
                "h5",
                "h6",
                "p",
                "span"
            ]
        },
        "typeLevel": {
            "title": "Type level",
            "type": "number",
            "enum": [
                1,
                2,
                3,
                4,
                5,
                6,
                7,
                8,
                9
            ]
        }
    }
}
