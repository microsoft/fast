{
    "$schema": "http://json-schema.org/schema#",
    "title": "Heading",
    "description": "A heading component's schema definition.",
    "type": "object",
    "id": "heading",
    "properties": {
        "tag": {
            "title": "HTML tag",
            "type": "string",
            "enum": [
                "h1",
                "h2",
                "h3",
                "h4",
                "h5",
                "h6",
                "p"
            ]
        },
        "level": {
            "title": "Level",
            "type": "number",
            "enum": [
                1,
                2,
                3,
                4,
                5,
                6
            ]
        }
    },
    "reactProperties": {
        "children": {
            "title": "Building blocks",
            "type": "children"
        }
    }
}
