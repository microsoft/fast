{
    "$schema": "http://json-schema.org/schema#",
    "title": "Caption",
    "description": "A caption component's schema definition.",
    "type": "object",
    "id": "caption",
    "children": true,
    "properties": {
        "tag": {
            "title": "HTML tag",
            "type": "string",
            "enum": [
                "p",
                "span",
                "caption",
                "figcaption"
            ],
            "default": "p"
        },
        "level": {
            "title": "Level",
            "type": "number",
            "enum": [
                1,
                2
            ],
            "default": 1
        }
    }
}
