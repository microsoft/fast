{
    "$schema": "http://json-schema.org/schema#",
    "title": "Paragraph",
    "description": "A paragraph component's schema definition.",
    "type": "object",
    "id": "paragraph",
    "properties": {
        "size": {
            "title": "Size",
            "type": "number",
            "enum": [
                1,
                2,
                3
            ]
        }
    },
    "reactProperties": {
        "children": {
            "title": "Building blocks",
            "type": "children",
            "defaults": [
                "text"
            ]
        }
    }
}
