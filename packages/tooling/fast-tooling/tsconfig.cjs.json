{
    "extends": "../../../tsconfig.json",
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist/dts",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "outDir": "dist/cjs",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES5",
        "allowJs": true,
        "resolveJsonModule": true,
        "types": [
            "mocha",
            "webpack-env"
        ],
        "lib": [
            "DOM",
            "ESNext",
            "ES2015",
            "ES2016.Array.Include"
        ]
    },
    "exclude": [
        "app",
        "node_modules",
        "src/message-system/webworker.ts"
    ]
}