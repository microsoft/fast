{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "declarationDir": "dist/dts",
        "outDir": "dist/esm",
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "target": "es2015",
        "module": "ESNext",
        "moduleResolution": "Node16",
        "importHelpers": true,
        "jsx": "react",
        "types": ["webpack-env"],
        "lib": ["DOM", "ES2015", "ES2016.Array.Include", "ES2017.Object"]
    },
    "include": ["src"]
}
