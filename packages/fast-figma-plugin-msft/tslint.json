{
    "extends": [
        "@microsoft/fast-tslint-rules",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            "dist/**"
        ]
    },
    "rules": {
        "typedef": [
            true,
            "call-signature",
            "arrow-call-signature",
            "parameter",
            "arrow-parameter",
            "property-declaration",
            "member-variable-declaration"
        ],
        "max-classes-per-file": [ false ]
    }
}
