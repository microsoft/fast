{
  "name": "@microsoft/fast-jss-manager-angular",
  "description": "Angular directive and component for managing component JSS stylesheets",
  "sideEffects": false,
  "version": "3.0.1",
  "author": {
    "name": "Microsoft",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "clean:dist": "node ../../build/clean.js dist",
    "prepare": "npm run clean:dist && npm run build",
    "prettier": "prettier --config ../../.prettierrc --write '**/*.ts'",
    "prettier:diff": "prettier --config ../../.prettierrc '**/*.ts' --list-different",
    "start": "webpack-dev-server --progress",
    "test": "npm run tslint && npm run unit-tests",
    "tslint": "tslint -c ./tslint.json '**/*.ts'",
    "tslint:fix": "tslint -c ./tslint.json --fix '**/*.ts'",
    "tslint:watch": "node build/tslint-watch.js",
    "unit-tests": "jest --maxWorkers=4",
    "unit-tests:watch": "jest --watch",
    "watch": "npm run build -- -w --preserveWatchOutput"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 41,
        "branches": 6,
        "functions": 20,
        "lines": 40
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "./build/setup-jest.ts",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|lodash-es)"
    ]
  },
  "devDependencies": {
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.9",
    "@angular/core": "^5.2.0",
    "@angular/platform-browser": "^5.2.9",
    "@angular/platform-browser-dynamic": "^5.2.9",
    "@babel/preset-env": "^7.1.0",
    "@microsoft/fast-tslint-rules": "^3.0.0",
    "@types/jest": "^22.1.2",
    "@types/lodash-es": "^4.17.0",
    "@types/node": "^9.4.6",
    "babel-jest": "^22.4.3",
    "core-js": "^2.4.1",
    "fork-ts-checker-webpack-plugin": "^0.4.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.3.0",
    "jest-preset-angular": "^5.2.1",
    "jss": "^9.8.0",
    "jss-preset-default": "^4.3.0",
    "lodash-es": "^4.0.0",
    "prettier": "1.14.3",
    "rxjs": "^5.5.6",
    "ts-jest": "^22.0.4",
    "ts-loader": "^4.4.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1",
    "watch": "^1.0.2",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "zone.js": "^0.8.19"
  },
  "peerDependencies": {
    "@angular/common": "^5.2.0",
    "@angular/core": "^5.2.0",
    "core-js": "^2.4.1",
    "jss": "^9.8.0",
    "jss-preset-default": "^4.3.0",
    "lodash-es": "^4.0.0",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.19"
  },
  "dependencies": {
    "@microsoft/fast-jss-manager": "^3.0.1"
  }
}
