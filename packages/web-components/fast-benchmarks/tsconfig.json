{
    "compilerOptions": {
        "composite": true,
        "target": "es2019",
        "module": "esnext",
        "lib": ["es2020", "DOM", "DOM.Iterable"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "skipLibCheck": true
    },
    "include": ["utils/**/*.ts", "benchmarks/fast-components/**/*.ts"]
}
