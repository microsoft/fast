{
    "extends": ["@microsoft/eslint-config-fast-dna", "prettier"],
    "rules": {
        "max-classes-per-file": "off",
        "no-case-declarations": "off",
        "@typescript-eslint/no-non-null-assertion": "off",
        "@typescript-eslint/ban-types": [
            "error",
            {
                "types": {
                    "{}": false,
                    "Function": false,
                    "Object": false
                },
                "extendDefaults": true
            }
        ]
    }
}
