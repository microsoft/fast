{
  "name": "@microsoft/fast-storybook-design-system-addon",
  "version": "1.2.38",
  "description": "Storybook add-on for FAST MSFT DesignSystem",
  "main": "dist/index.js",
  "author": {
    "name": "Microsoft",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/fast/issues/new/choose"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "clean:dist": "node ../../../build/clean.js dist",
    "prepare": "yarn clean:dist && yarn build",
    "prettier": "prettier --config ../../../.prettierrc --write \"**/*.{ts,tsx}\"",
    "prettier:diff": "prettier --config ../../../.prettierrc \"**/*.{ts,tsx}\" --list-different",
    "test": "yarn eslint",
    "eslint": "eslint . --ext .ts,.tsx",
    "eslint:fix": "eslint . --ext .ts,.tsx --fix",
    "unit-tests": "jest --maxWorkers=2",
    "unit-tests:watch": "jest --watch",
    "watch": "tsc -p ./tsconfig.json -w --preserveWatchOutput"
  },
  "jest": {
    "collectCoverage": false,
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 84,
        "functions": 95,
        "lines": 95
      }
    },
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "!<rootDir>/node_modules/lodash-es"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "dependencies": {
    "@microsoft/fast-colors": "^5.0.10",
    "@microsoft/fast-components-styles-msft": "^4.28.13",
    "@storybook/addons": "^5.1.3",
    "@storybook/api": "^5.1.3",
    "@storybook/client-logger": "^5.1.3",
    "@storybook/components": "^5.1.9",
    "@storybook/core-events": "^5.1.9",
    "@storybook/router": "^5.1.3",
    "@storybook/theming": "^5.1.3",
    "jss": "^9.8.7",
    "jss-plugin-nested": "^10.0.0-alpha.7"
  },
  "devDependencies": {
    "@microsoft/eslint-config-fast-dna": "^1.1.3",
    "@microsoft/fast-jss-manager-react": "^4.7.6",
    "@storybook/react": "^5.1.3",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.8.19",
    "@types/webpack-env": "^1.14.0",
    "eslint-config-prettier": "^6.10.1",
    "jest": "^25.4.0",
    "lodash-es": "^4.0.0",
    "prettier": "2.0.2",
    "ts-jest": "^25.4.0",
    "typescript": "^3.5.1"
  },
  "peerDependencies": {
    "@microsoft/fast-jss-manager-react": "^4.3.5",
    "react": "^16.6.0"
  }
}
