{
  "name": "@microsoft/fast-application-utilities",
  "description": "FAST application utilities",
  "version": "3.0.0",
  "author": {
    "name": "Microsoft",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "clean:dist": "node ../../build/clean.js dist",
    "prepare": "npm run clean:dist && npm run build",
    "prettier": "prettier --config ../../.prettierrc --write '**/*.ts'",
    "test": "npm run tslint && npm run unit-tests",
    "tslint": "tslint -c ./tslint.json '**/*.ts{,x}'",
    "tslint:fix": "tslint -c ./tslint.json --fix '**/*.ts{,x}'",
    "unit-tests": "jest --maxWorkers=4",
    "unit-tests:watch": "jest --watch",
    "watch": "npm run build -- -w --preserveWatchOutput"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 87,
        "branches": 75,
        "functions": 100,
        "lines": 87
      }
    },
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "!<rootDir>/node_modules/lodash-es",
      "node_modules/jss-*",
      "node_modules/css-vendor"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "devDependencies": {
    "@microsoft/fast-tslint-rules": "^3.0.0",
    "@types/jest": "^23.3.5",
    "@types/lodash-es": "^4.17.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.6.1",
    "jest": "^23.6.0",
    "lodash-es": "^4.0.0",
    "prettier": "1.14.3",
    "ts-jest": "^23.10.4",
    "ts-loader": "^4.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.15.0",
    "tslint-loader": "^3.6.0",
    "typescript": "^3.0.1"
  },
  "peerDependencies": {
    "lodash-es": "^4.0.0"
  }
}
