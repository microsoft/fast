{
  "compilerOptions": {
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": ".",
    "types": [
      "node",
      "react",
      "react-dom",
      "react-redux",
      "web-animations-js",
      "jest"
    ],
    "lib": [ "es2015", "es2017", "dom", "scripthost" ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "[lib]/*": [
        "./lib/*"
      ]
    }
  }
}