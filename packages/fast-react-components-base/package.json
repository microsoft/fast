{
  "name": "@microsoft/fast-react-components-base",
  "version": "0.0.0",
  "description": "FAST base components implemented in React",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "clean:dist": "node ./build/clean.js dist",
    "start": "webpack-dev-server",
    "test": "jest",
    "tslint": "tslint -c ../../tslint.json **/*.ts **/*.tsx",
    "tslint:fix": "tslint -c ../../tslint.json --fix **/*.ts **/*.tsx",
    "prepack": "npm run build"
  },
  "author": {
    "name": "Fluent Web",
    "email": "fwq@microsoft.com"
  },
  "license": "MIT",
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "devDependencies": {
    "fork-ts-checker-webpack-plugin": "^0.4.0",
    "html-webpack-plugin": "^3.0.4",
    "jest": "^22.4.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.1",
    "ts-loader": "^4.0.1",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "typescript": "^2.7.2",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10",
    "webpack-dev-server": "^3.1.0",
    "yargs": "^11.0.0"
  }
}
