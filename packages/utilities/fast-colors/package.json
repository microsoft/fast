{
  "name": "@microsoft/fast-colors",
  "description": "A color utility for generating a range of colors from a single color",
  "sideEffects": false,
  "version": "5.1.5",
  "author": {
    "name": "Microsoft",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/fast/issues/new/choose"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json && yarn doc",
    "clean:dist": "node ../../../build/clean.js dist",
    "coverage": "jest --coverage",
    "doc": "api-extractor run --local",
    "doc:ci": "api-extractor run",
    "prepare": "yarn clean:dist && yarn build",
    "prettier": "prettier --config ../../../.prettierrc --write \"**/*.ts\"",
    "prettier:diff": "prettier --config ../../../.prettierrc \"**/*.ts\" --list-different",
    "test": "yarn eslint && yarn unit-tests && yarn doc",
    "eslint": "eslint . --ext .ts",
    "eslint:fix": "eslint . --ext .ts --fix",
    "unit-tests": "jest --runInBand",
    "unit-tests:watch": "jest --watch",
    "watch": "yarn build -- -w --preserveWatchOutput"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "text",
      [
        "lcov",
        {
          "projectRoot": "../../../"
        }
      ]
    ],
    "coveragePathIgnorePatterns": [
      "pixel-blob.ts"
    ],
    "testURL": "http://localhost",
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "branches": 33,
        "functions": 69,
        "lines": 70
      }
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@microsoft/eslint-config-fast-dna": "^2.0.0",
    "@types/jest": "^25.2.1",
    "eslint-config-prettier": "^6.10.1",
    "jest": "^25.4.0",
    "prettier": "2.0.2",
    "typescript": "^3.9.0"
  }
}
