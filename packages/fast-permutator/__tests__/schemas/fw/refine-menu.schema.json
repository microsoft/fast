{
    "$schema": "http://json-schema.org/schema#",
    "title": "Refine menu",
    "description": "A Fluent Web refine menu component's schema definition.",
    "type": "object",
    "id": "/components/refine-menu",
    "properties": {
        "id": {
            "title": "The ID of the refine menu component",
            "type": "string",
            "example": "refineMenuId"
        },
        "expanded": {
            "title": "The expanded state of the refine menu component",
            "type": "boolean",
            "example": true
        },
        "expandButtonText": {
            "title": "The text for the expand button",
            "type": "string",
            "example": "Expand refine menu"
        },
        "expandButtonAriaLabel": {
            "title": "The aria label for the expand button",
            "type": "string",
            "example": "Expand refine menu"
        },
        "collapseButtonAriaLabel": {
            "title": "The aria label for the collapse button",
            "type": "string",
            "example": "Collapse refine menu"
        },
        "heading": {
            "allOf": [
                {
                    "$ref": "/components/heading"
                },
                {
                    "not": {
                        "required": [
                            "level",
                            "hyperlink",
                            "lean",
                            "initialBaseline"
                        ]
                    }
                }
            ]
        },
        "sections": {
            "title": "The refine menu sections",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "title": "The ID of the section",
                        "type": "string",
                        "example": "section1Id"
                    },
                    "label": {
                        "title": "The title of the section",
                        "type": "string",
                        "example": "Section one"
                    },
                    "expanded": {
                        "title": "The initial expanded state",
                        "type": "boolean",
                        "example": true
                    },
                    "selectType": {
                        "title": "The selection type",
                        "type": "string",
                        "enum":[
                            "single",
                            "multiple"
                        ],
                        "example": "single"
                    },
                    "refineItems": {
                       "title": "The refine menu items",
                       "type": "array",
                       "items": {
                           "$ref": "/components/refine-item"
                       },
                       "minItems": 2
                    }
                },
                "required": [
                    "id",
                    "label",
                    "expanded",
                    "selectType",
                    "refineItems"
                ]
            },
            "minItems": 2
        }
    },
    "required": [
        "id",
        "expanded",
        "expandButtonText",
        "expandButtonAriaLabel",
        "collapseButtonAriaLabel",
        "heading",
        "sections"
    ]
}