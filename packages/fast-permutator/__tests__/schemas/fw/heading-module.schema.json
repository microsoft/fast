{
    "$schema": "http://json-schema.org/schema#",
    "title": "Heading",
    "description": "A Fluent Web heading module's schema definition",
    "type": "object",
    "id": "/modules/heading",
    "properties": {
        "level": {
            "title": "The headings hierarchy level",
            "type": "number",
            "default": 4,
            "enum":[
                1,
                2,
                3,
                4,
                5,
                6
            ]
        },
        "heading": {
            "title": "The heading component of the heading module",
            "allOf": [
                {
                    "$ref": "/components/heading"
                },
                {
                    "properties": {
                        "tag": {
                            "enum": [
                                "h1",
                                "h2",
                                "h3",
                                "h4",
                                "h5",
                                "h6"
                            ]
                        },
                        "not": {
                            "required": [
                                "level",
                                "lean",
                                "initialBaseline"
                            ]
                        }
                    }
                }
            ]
        },
        "actionMenus": {
            "title": "The optional action menus of the heading module",
            "type": "array",
            "items": {
                "$ref": "/components/action-menu"
            }
        }
    },
    "required": [
        "heading"
    ]
}