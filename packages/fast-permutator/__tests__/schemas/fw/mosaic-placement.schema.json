{
    "$schema": "http://json-schema.org/schema#",
    "title": "Mosaic placement",
    "description": "A Fluent Web mosaic placement component's schema definition.",
    "type": "object",
    "id": "/components/mosaic-placement",
    "properties": {
        "backgroundImage": {
            "allOf": [
                {
                    "$ref": "/components/image#/definitions/picture-element"
                },
                {
                    "not": {
                        "required": [
                            "padding",
                            "round"
                        ]
                    },
                    "required": [
                        "vp1",
                        "vp2",
                        "vp3",
                        "vp4",
                        "vp5",
                        "vp6"
                    ]
                }
            ]
        },
        "heading": {
            "allOf": [
                {
                    "$ref": "/components/heading"
                },
                {
                    "not": {
                        "required": [
                            "level",
                            "hyperlink",
                            "lean",
                            "initialBaseline"
                        ]
                    }
                }
            ]
        },
        "subheading": {
            "allOf": [
                {
                    "$ref": "/components/subheading"
                },
                {
                    "not": {
                        "required": [
                            "level"
                        ]
                    }
                }
            ]
        },
        "callToAction": {
            "allOf": [
                {
                    "$ref": "/components/call-to-action"
                },
                {
                    "not": {
                        "required": [
                            "style",
                            "disabled"
                        ]
                    }
                }
            ]
        },
        "theme": {
            "title": "Color theme",
            "type": "string",
            "whitelisted": true,
            "enum": [
                "light",
                "dark"
            ]
        },
        "mask": {
            "title": "Overlay opacity",
            "type": "number",
            "whitelisted": true,
            "enum": [
                20,
                40,
                60,
                80
            ],
            "example": 40
        }
    },
    "dependencies": {
        "subheading": [
            "heading"
        ]
    },
    "required": [
        "backgroundImage"
    ]
}