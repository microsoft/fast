{
  "compilerOptions": {
    "plugins": [
      {
        "name": "@genesiscommunitysuccess/custom-elements-lsp",
        "srcRouteFromTSServer": "../../../examples/todo-app",
        "parser": {
          "fastEnable": true,
          "timeout": 2000,
          "dependencies": [ "!**/@custom-elements-manifest/**/*" ]
        },
        "plugins": [
          "@genesiscommunitysuccess/cep-fast-plugin"
        ]
      }
    ],
    "pretty": true,
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "bundler",
    "importHelpers": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "include": [
    "src"
  ]
}
