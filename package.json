{
  "name": "@microsoft/fast",
  "description": "An unopinionated system of components, development tools, and utilities used Ã  la carte or as a suite to build enterprise-grade websites and applications.",
  "version": "1.8.0",
  "author": {
    "name": "Microsoft",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "sites/site-utilities",
    "sites/website",
    "examples/todo-app",
    "examples/ssr"
  ],
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/fast/issues/new/choose"
  },
  "scripts": {
    "bump": "beachball bump",
    "build": "npm run build --workspaces --if-present",
    "change": "beachball change --dependent-change-type none",
    "checkchange": "beachball check  --scope \"!sites/*\" --changehint \"Run 'npm run change' to generate a change file\"",
    "check": "beachball check ",
    "build:gh-pages": "npm run build -w @microsoft/fast-site",
    "publish": "beachball publish",
    "publish-ci": "beachball publish -y --access public",
    "sync": "beachball sync",
    "test:diff:error": "echo \"Untracked files exist, try running npm prepare to identify the culprit.\" && exit 1",
    "test:diff": "git update-index --refresh && git diff-index --quiet HEAD -- || npm run test:diff:error",
    "test:validation": "npm run test:diff",
    "test": "npm run test --workspaces --if-present",
    "watch": "tsc -p ./tsconfig.json -w --preserveWatchOutput",
    "format:check": "npx prettier . --check",
    "format": "npx prettier . --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@jsdevtools/coverage-istanbul-loader": "3.0.5",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@microsoft/api-extractor": "7.47.0",
    "@octokit/rest": "22.0.0",
    "@playwright/test": "1.56.1",
    "@types/node": "^22.12.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "beachball": "2.51.0",
    "concurrently": "9.2.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "glob": "10.5.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "markdown-it": "12.3.2",
    "prettier": "2.8.8",
    "rimraf": "6.1.0",
    "typescript": "4.7.4",
    "vite": "7.1.12",
    "yargs": "17.7.2"
  },
  "overrides": {
    "webpack-dev-server": "5.2.2",
    "sucrase": {
      "glob": "$glob"
    },
    "read-package-json": {
      "glob": "$glob"
    },
    "@microsoft/fast-foundation": {
      "@microsoft/fast-element": "file:./packages/fast-element"
    }
  }
}